{
  "name": "gmail-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Gmail integration with email categorization, search, archive, and delete capabilities",
  "private": true,
  "type": "module",
  "bin": {
    "gmail-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:delete-integration": "node scripts/test-delete-integration.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node build/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@types/chai": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^17.0.4",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "chai": "^5.2.0",
    "jest": "^29.7.0",
    "mocha": "^11.7.0",
    "puppeteer": "^24.10.2",
    "sinon": "^20.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
